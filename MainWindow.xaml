<Window x:Class="TMS_ap_dg_js_sm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS_ap_dg_js_sm"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Rectangle Height="200" VerticalAlignment="Top" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5, 1" StartPoint="0.5, 0">
                    <GradientStop Color="#FF4CC0FC"/>
                    <GradientStop Color="#FF216480" Offset="1"/>
                    <GradientStop Color="#FF348DBF" Offset="0.5"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="440" Fill="White" StrokeThickness="3" Margin="130,100,130,65">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FF636363" Direction="-90" BlurRadius="15"/>
            </Rectangle.Effect>
        </Rectangle>
    </Grid>
</Window>
