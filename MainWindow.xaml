<Window x:Class="TMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS"
        mc:Ignorable="d"
        Title="MainWindow"  Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid Width="150" HorizontalAlignment="Left">
            <Grid Height="75" VerticalAlignment="Top">
                <Label Content="TMS" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Button x:Name="AdminBtn" Content="Admin" FontSize="20" Height="50" Margin="0,79,0,316" Click="Admin_Click"/>
            <Rectangle Stroke="Gray"/>
            <Button x:Name="BuyerBtn" Content="Buyer" FontSize="20" Height="50" Margin="0,129,0,266" Click="Buyer_Click"/>
            <Button x:Name="PlannerBtn" Content="Planner" FontSize="20" Height="50" Margin="0,179,0,216" Click="Planner_Click"/>
            <Button x:Name="CloseBtn" Content="Close" FontSize="20" Height="50" Margin="0,385,0,10" Click="Exit_Click"/>
        </Grid>
        <Frame x:Name="MainFrame" Width="645" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
